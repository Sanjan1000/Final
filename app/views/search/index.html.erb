<h1> <%= pluralize(@posts.count, "Result") %> </h1>
<%= render 'search/form' %>

<div >
  <table >
    <thead>
      <tr>
        <th> <%= sort_link(@q, :title, "Title", default_order: :asc)%> </th>
        
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td> <%= link_to post.title, post %> </td>
       
      </tr>
      <% end %>
    </tbody>
  </table>
</div>