<style>
html {
                height: 100%;
                box-sizing: border-box;
            }

            body {
                margin: 0;
                display: flex; 
                flex-direction: column;
                min-height: 100vh; 
                box-sizing: inherit;
            }
            footer {
                background: greenyellow;
                font-size: 8px;
                text-align: center;
                margin-top: auto; 
            }
</style>
<!DOCTYPE html>
<html>
  <head>
    <title>Final</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
  </head>

  <body>

    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Collection Center</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link" href="#"><% if !user_signed_in? %>
          <%= link_to 'Home', root_path, class: "nav-link active", style: "padding-right: 5; padding-top: 24px;" %>
      <% else %>
      <%= link_to "Home", new_user_session_path , :class => "nav-link active"%>
    <% end %></a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="#"><% if !user_signed_in? %>
      <p class="sign_in"><%= link_to "Login", new_user_session_path , :class => "nav-link active"%></p>
    <% end %></a>
        </li>

        <li class="nav-item">
          <a class="nav-link" href="#"><% if user_signed_in? %>
      <%= link_to 'Admin Dashboard', admin_index_path , :class => "nav-link active" if current_user.admin? %>
    <% end %></a>
        </li>
        
        <li class="nav-item">
          <a class="nav-link" href="#"> <% if user_signed_in? %>
      <%= link_to 'User management', posts_path , :class => "nav-link active"%> 
    <% end %>
    </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#"><% if user_signed_in? %>
      <%= link_to('Logout', destroy_user_session_path, :class => "nav-link active", :method => :delete) %>
    <% end %></a>
        </li>
        
        
        <li class="nav-item position-absolute end-0">
  <% if user_signed_in? %>
    <%= link_to search_path, class: "nav-link active" do %>
      Search <i class="bi bi-search"></i>
    <% end %>
  <% end %>
</li>
      </ul>
      
    </div>
  </div>
</nav>

  <span class="notice"><%= notice %></span>
  <span class="alert"><%= alert %></span>
</div>
    
    
   
    
    
    <%= yield %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
 
  <footer class="bg-dark text-white text-center text-lg-start">
      <div class="container p-4">
        <div class="row">
          <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
            <h5 class="text-uppercase">@Collection Center</h5>
            <p>
              Welcome to @Collection Center, your go-to platform for curated collections. Explore our latest items, connect with like-minded individuals, and share your own collections with the world.
            </p>
          </div>
          
          <div class="col-lg-3 col-md-6 mb-4 mb-md-0">
            <h5 class="text-uppercase">Contact Us</h5>
            <ul class="list-unstyled mb-0">
              <li>
                <i class="bi bi-telephone-fill"></i> +1 234 567 890
              </li>
              <li>
                <i class="bi bi-envelope-fill"></i> info@collectioncenter.com
              </li>
              <li>
                <i class="bi bi-geo-alt-fill"></i> 123 Collection St, City, Country
              </li>
            </ul>
          </div>
        </div>
      </div>

      <div class="text-center p-3 bg-secondary">
        <small>&copy; 2024 @Collection Center. All rights reserved.</small>
      </div>
    </footer>
  </div>
</body>
</html>