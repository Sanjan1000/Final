<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>

<h1 class="display-4">Tags</h1>
<%= button_to "New tag", new_tag_path, class: "btn btn-primary mt-3", method: :get %>
<div id="tags" class="list-group">
  <% @tags.each do |tag| %>
    <div class="list-group-item">
      <%= render tag %>
      <p>
        <%= link_to "Show this tag", tag, class: "btn btn-info" %>
      </p>
    </div>
  <% end %>
</div>

