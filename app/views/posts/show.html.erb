<h2><%= @post.title %></h2>
<div>
  <%= @post.body %>
</div>

<% if user_signed_in? %>
    <%= link_to "Edit Post" ,edit_post_path(@post)%>
    <%= button_to "Delete",post_path(@post),method: :delete, data: { confirm: "Are you sure?"}%>
    <%= link_to 'Add Nested Post', new_post_nested_post_path(@post) %>
<% end %>
<h2>Nested Posts:</h2>
<% @post.nested_posts.each do |nested_post| %>
  <div>
    <h3><%= nested_post.title %></h3>
    <p><%= nested_post.body %></p>
  </div>
<% end %>

<%= link_to 'Back', posts_path %>
<br>
<h2>Total Comments:   <%= @post.comments.count %></h2>
  <%= render @post.comments %>
<% if user_signed_in? %>
  <h3>Leave a comment!  </h3>
  <%= render 'comments/form' %>
<% end %>
<br>