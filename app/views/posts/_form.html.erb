<style>
  /* custom.css */

/* Define light mode colors */
:root {
  --background-color: #f8f9fa;
  --text-color: #343a40;
  --card-bg: #fff;
  --card-border: #dee2e6;
  --card-header-bg: #6c757d;
  --card-header-text: #fff;
  --btn-bg: #343a40;
  --btn-text: #fff;
  --btn-hover-bg: #495057;
  --link-color: #007bff;
  --link-hover-color: #0056b3;
}

/* Define dark mode colors */
@media (prefers-color-scheme: dark) {
  :root {
    --background-color: #343a40;
    --text-color: #f8f9fa;
    --card-bg: #424242;
    --card-border: #6c757d;
    --card-header-bg: #495057;
    --card-header-text: #f8f9fa;
    --btn-bg: #6c757d;
    --btn-text: #343a40;
    --btn-hover-bg: #343a40;
    --link-color: #80bdff;
    --link-hover-color: #5a9bd3;
  }
}

/* Apply the colors */
body {
  background-color: var(--background-color);
  color: var(--text-color);
}

.card {
  margin-bottom: 1rem;
  background-color: var(--card-bg);
  border-color: var(--card-border);
}

.card-header {
  background-color: var(--card-header-bg);
  color: var(--card-header-text);
}

.btn-custom {
  background-color: var(--btn-bg);
  color: var(--btn-text);
}

.btn-custom:hover {
  background-color: var(--btn-hover-bg);
  color: var(--btn-text);
}

.text-decoration-none {
  color: var(--link-color);
}

.text-decoration-none:hover {
  color: var(--link-hover-color);
}

.badge {
  background-color: var(--card-header-bg);
  color: var(--card-header-text);
}

.list-group-item {
  background-color: var(--card-bg);
  border-color: var(--card-border);
  color: var(--text-color);
}

</style>
<%= form_for @post, html: { class: 'mt-5' } do |f| %>
  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :title, "Name", class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  
  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :body, "Description", class: "form-label" %>
      <%= f.text_area :body, id: "markdown-editor", class: "form-control" %>
    </div>
  </div>
  
  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :topic, "Topic", class: "form-label" %>
      <%= f.select :topic, Post.topics.keys.map { |topic| [topic.capitalize, topic] }, {}, class: "form-select" %>
    </div>
  </div>

  <!-- Integer Fields -->
  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :integer_field1, "Integer Field 1", class: "form-label" %>
      <%= f.number_field :integer_field1, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :integer_field2, "Integer Field 2", class: "form-label" %>
      <%= f.number_field :integer_field2, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :integer_field3, "Integer Field 3", class: "form-label" %>
      <%= f.number_field :integer_field3, class: "form-control" %>
    </div>
  </div>

  <!-- String Fields -->
  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :string_field1, "String Field 1", class: "form-label" %>
      <%= f.text_field :string_field1, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :string_field2, "String Field 2", class: "form-label" %>
      <%= f.text_field :string_field2, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :string_field3, "String Field 3", class: "form-label" %>
      <%= f.text_field :string_field3, class: "form-control" %>
    </div>
  </div>

  <!-- Multiline Text Fields -->
  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :multiline_text1, "Multiline Text 1", class: "form-label" %>
      <%= f.text_area :multiline_text1, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :multiline_text2, "Multiline Text 2", class: "form-label" %>
      <%= f.text_area :multiline_text2, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :multiline_text3, "Multiline Text 3", class: "form-label" %>
      <%= f.text_area :multiline_text3, class: "form-control" %>
    </div>
  </div>

  <!-- Boolean Checkboxes -->
  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :date_field1, "Date Field 1", class: "form-label" %>
      <br>
      <%= f.text_field :boolean_field1_text %> 
      <%= f.check_box :boolean_field1, {}, true, false %>
     </div>
  </div>

  
  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :date_field1, "Date Field 2", class: "form-label" %>
      <br>
      <%= f.text_field :boolean_field2_text %> 
      <%= f.check_box :boolean_field2, {}, true, false %>
     </div>
  </div>
  
  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :date_field1, "Date Field 3", class: "form-label" %>
      <br>
      <%= f.text_field :boolean_field2_text %> 
      <%= f.check_box :boolean_field2, {}, true, false %>
     </div>
  </div>

   <!-- Date Fields -->
  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :date_field1, "Date Field 1", class: "form-label" %>
      <%= f.date_select :date_field1, {}, class: "form-select" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :date_field2, "Date Field 2", class: "form-label" %>
      <%= f.date_select :date_field2, {}, class: "form-select" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.label :date_field3, "Date Field 3", class: "form-label" %>
      <%= f.date_select :date_field3, {}, class: "form-select" %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-6">
      <%= f.submit 'Create', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    new SimpleMDE({ element: document.getElementById("markdown-editor") });
  });
</script>