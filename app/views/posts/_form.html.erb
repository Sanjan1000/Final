<%= form_for @post do |f| %>
  <%= f.label :title, "Name" %>
  <br>
  <%= f.text_field :title %>
  <br><br>
  
  <%= f.label :body, "Description" %>
  <br>
  <%= f.text_area :body, id: "markdown-editor" %>
  <br><br>
  
  <div class="field">
    <%= f.label :topic %>
    <%= f.select :topic, Post.topics.keys.map { |topic| [topic.capitalize, topic] } %>
  </div>
  <br><br>
  <%= f.label :integer_field1, "Integer Field 1" %> <br>
  <%= f.text_field :integer_field1%>
  <br>
  <%= f.number_field :integer_field1 %>
  <br><br>
  <%= f.label :integer_field1, "Integer Field 2" %><br>
  <%= f.text_field :integer_field2%>
  <br>
  <%= f.number_field :integer_field2 %>
  <br><br>
  <%= f.label :integer_field1, "Integer Field 3" %><br>
  <%= f.text_field :integer_field3 %>
  <br>
  <%= f.number_field :integer_field3 %>
  <br><br>

  <!-- String Fields -->
  <%= f.label :string_field1, "String Field 1" %><br>
  <%= f.text_field :string_field1 %>
  <br>
  <%= f.text_field :string_field1 %>
  <br><br>
  <%= f.label :string_field1, "String Field 2" %><br>
  <%= f.text_field :string_field2 %>
  <br>
  <%= f.text_field :string_field2 %>
  <br><br>
  <%= f.label :string_field1, "String Field 3" %><br>
  <%= f.text_field :string_field3 %>
  <br>
  <%= f.text_field :string_field3 %>
  <br><br>

  <!-- Multiline Text Fields -->
  <%= f.label :multiline_text1, "Multiline Text 1" %><br>
  <%= f.text_field :multiline_text1 %>
  <br>
  <%= f.text_area :multiline_text1 %>
  <br><br>
  <%= f.label :multiline_text1, "Multiline Text 2" %><br>
  <%= f.text_field :multiline_text2 %>
  <br>
  <%= f.text_area :multiline_text2 %>
  <br><br>
  <%= f.label :multiline_text1, "Multiline Text 3" %><br>
  <%= f.text_field :multiline_text3 %>
  <br>
  <%= f.text_area :multiline_text3 %>
  <br><br>

  

  <!-- Date Fields -->
  <%= f.label :date_field1, "Date Field 1" %><br>
  <%= f.text_field :date_field1 %>
  <br>
  <%= f.date_select :date_field1 %>
  <br><br>
  <%= f.label :date_field1, "Date Field 2" %><br>
  <%= f.text_field :date_field2 %>
  <br>
  <%= f.date_select :date_field2 %>
  <br><br>
  <%= f.label :date_field1, "Date Field 3" %><br>
  <%= f.text_field :date_field3%>
  <br>
  <%= f.date_select :date_field3 %>
  <br><br>

  <%= f.submit 'Create' %>  
<% end %>


<script>
  document.addEventListener("DOMContentLoaded", function() {
    new SimpleMDE({ element: document.getElementById("markdown-editor") });
  });
</script>