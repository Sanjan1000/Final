<%= form_with(model: [ @post, @nested_post ], url: post_nested_posts_path(@post)) do |form| %>
  <% if @nested_post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@nested_post.errors.count, "error") %> prohibited this nested post from being saved:</h2>
      <ul>
        <% @nested_post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>